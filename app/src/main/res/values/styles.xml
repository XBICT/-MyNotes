<?xml version="1.0" encoding="utf-8"?>
<resources>

<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

<style name="AppDefault" parent="AppTheme">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowNoTitle">true</item>
    <item name="android:textColor">@color/TextColor</item>


</style>

    <style name="ListViewStyle.Light" parent="android:style/Widget.ListView">
        <item name="background">@color/BGNgoodle</item>
        <item name="android:padding">16dp</item>
        <item name="android:divider">@color/material_grey_500</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@color/material_grey_500</item>

    </style>

    <style name="StateText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#33000000</item>
    </style>
</resources>
